@using System.Web.Script.Services
@using DVDLibrary.Models
@model List<Movie>
@{
    ViewBag.Title = "ViewAllDvds";
}

<h2>View All Dvds</h2>

@*<button class="btn-primary">Add DVD</button>*@

@*@Html.ActionLink("Add A DVD","AddDvd", "Home")*@
<div>
    <input id="search" name="search" type="text" placeholder="Search Movie Title Here" data-toggle="hideseek" data-list=".list">
    <p></p>
</div>
<div class ="row">
<ul class="list-group list">
    @foreach (Movie movie in Model)
    {
        
            @*<li class="list-group-item">
                    @movie.MovieId
                </li>*@
            <a href="/Home/SelectDvd/@movie.MovieId">
                <div class="col-md-3">
                <li class="list-group-item">
                    @movie.MovieTitle
                </li>
                    </div>
            </a>

            @*<li class="list-group-item">
                    @movie.MpaaRating
                </li>*@
        
    }
    </ul>
</div>

@section Scripts{
    <script src="~/Scripts/app/mySearch.js"></script>
}
