<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />  
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index" id="bootstrap-override">
                    <img alt="SG Corp" src="/Content/Images/SWG-small.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Index"><b><span class="glyphicon glyphicon-home"></span> Home</b><span class="sr-only">(current)</span></a></li>
                    <li><a href="/Home/ViewAllDvds"><span class="glyphicon glyphicon-film"></span> My DVD Collection</a></li>
                    <li><a href="/AddMovie/Index"><span class="glyphicon glyphicon-plus"></span> Add New DVD</a></li>
                    <li class="dropdown">
                        <a href="/Borrower/Index" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-user"></span> Borrowers <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Borrower/Index"><span class="glyphicon glyphicon-asterisk"></span> View All Borrowers</a></li>
                            <li><a href="/Borrower/AddNewBorrower"><span class="glyphicon glyphicon-plus"></span> Add New Borrower</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="/Home/SearchForMovie" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-search"></span> Search <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Home/SearchForMovie">Search Index</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Search by Title</a></li>
                            <li><a href="#">Search by Genre</a></li>
                            <li><a href="#">Search by Rating</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Brought to you by Git Happens...</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

@RenderSection("scripts", false)
</body>
</html>