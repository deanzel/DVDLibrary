    @*<script src="~/Scripts/app/jquery-validate-default.js"></script>
    <script src="~/Scripts/app/addborrowerValidation.js"></script>*@
    @*<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>*@
}